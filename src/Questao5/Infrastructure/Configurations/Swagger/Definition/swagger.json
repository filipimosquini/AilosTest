  "paths": {
    "/api/movements": {
      "post": {
        "tags": [
          "Movement"
        ],
        "summary": "api/movements.",
        "description": "<p>\r\n  <b> Desciption: </b>\r\n  <br />\r\n            This method create a movement. <br /></p>\r\n<p>\r\n  <b> Requirements: </b>\r\n  <br />\r\n            Not Exists. <br /></p>",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CreateMovementCommandResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateMovementCommandResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateMovementCommandResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request\r\n            <ul><li>Inactive.Account</li><li>Invalid.AccountNumber</li><li>Invalid.Amount</li><li>Invalid.MovementType</li><li>Invalid.RequestId</li></ul>"
          },
          "404": {
            "description": "Not Found\r\n            <ul><li>NotFound.Account</li></ul>"
          },
          "422": {
            "description": "UnprocessableEntity\r\n            <ul><li>NotRegistered.Movement</li></ul>"
          },
          "500": {
            "description": "InternalServerError\r\n            <ul><li>Error.Unexpected</li></ul>"
          }
        }
      }
    },
    "/api/movements/balances": {
      "get": {
        "tags": [
          "Movement"
        ],
        "summary": "api/movements/balances.",
        "description": "<p>\r\n  <b> Desciption: </b>\r\n  <br />\r\n            This method get a balance result. <br /></p>\r\n<p>\r\n  <b> Requirements: </b>\r\n  <br />\r\n            Not Exists. <br /></p>",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetBalanceQuery"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GetBalanceQuery"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GetBalanceQuery"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GetBalanceQueryResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetBalanceQueryResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetBalanceQueryResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request\r\n           <ul><li>Inactive.Account</li><li>Invalid.AccountNumber</li><li>NotFound.Account</li></ul>"
          },
          "500": {
            "description": "InternalServerError\r\n           <ul><li> Error.Unexpected </li></ul>"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateMovementCommand": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string",
            "nullable": true
          },
          "accountNumber": {
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "movementType": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateMovementCommandResponse": {
        "type": "object",
        "properties": {
          "movementId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "GetBalanceQuery": {
        "type": "object",
        "properties": {
          "accountNumber": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetBalanceQueryResponse": {
        "type": "object",
        "additionalProperties": false
      }
    }
  }
}